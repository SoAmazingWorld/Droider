<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/about_linearLayout"
        >

        <TextView
            android:id="@+id/about_frag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Основное"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="?android:attr/textColorPrimary"/>
        <View
            android:id="@+id/divider_line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorAccent_dark"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/about_frag_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textColor="?android:attr/textColorSecondary"
            android:text="@string/description"/>

        <TextView
            android:id="@+id/about_frag_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Авторы"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="?android:attr/textColorPrimary"/>

        <View
            android:id="@+id/divider_line3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorAccent_dark"
            android:layout_marginTop = "10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/author1_linear"
            android:weightSum="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VedIm"
                android:layout_margin="15dp"
                android:src="@drawable/ic_vedenskiy"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:textColor="?android:attr/textColorSecondary"                android:text="Борис Веденский\nАвтор Droider Show, ОффТОП Шоу и #КакОно. Главред Droider.ru."
                android:id="@+id/VedDescr"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/author2_linear"
            android:weightSum="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/IstIm"
                android:layout_margin="15dp"
                android:src="@drawable/ic_istishev"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:text="Валерий Истишев\nCEO Droider Media. IT-жур, DroiderShow, Droider.ru, Droidercast"
                android:id="@+id/IstDescr"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <TextView
            android:id="@+id/about_frag_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Разработчки"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textColor="?android:attr/textColorPrimary" />

        <View
            android:id="@+id/divider_line2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorAccent_dark"
            android:layout_marginTop = "10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/alex_linear"
            android:weightSum="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AlexIm"
                android:layout_margin="15dp"
                android:src="@drawable/ic_alex"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="Александр Гузенко\nПрограммист, студент МЭИ"
                android:id="@+id/alex_descr"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ArtIm"
                android:layout_margin="15dp"
                android:src="@drawable/ic_art"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:textColor="?android:attr/textColorSecondary"
                android:text="Артем Головин\nПрограммист, студент MRU"
                android:id="@+id/art_descr"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/footer"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>