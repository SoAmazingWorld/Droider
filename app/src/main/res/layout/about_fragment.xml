<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:weightSum="1">

    <TextView
        android:id="@+id/about_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Основное"
        android:textStyle="bold"
        android:textColor="@color/primary_header_text"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>

    <View
        android:id="@+id/divider_line"
        android:layout_below="@+id/about_frag_title"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/accent_material_dark"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/about_frag_body"
        android:layout_below="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:text="@string/description"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/about_frag_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Авторы"
            android:textStyle="bold"
            android:textColor="@color/primary_header_text"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"/>

        <View
            android:id="@+id/divider_line3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/accent_material_dark"
            android:layout_below="@+id/about_frag_title3"
            android:layout_alignLeft="@+id/about_frag_title3"
            android:layout_alignStart="@+id/about_frag_title3"
            android:layout_marginTop = "7dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VedIm"
            android:src="@mipmap/dev_art"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/divider_line3"
            android:layout_alignStart="@+id/divider_line3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Борис Веденский"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/about_frag_title3"
            android:layout_alignEnd="@+id/about_frag_title3"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IstIm"
            android:src="@mipmap/dev_alex"
            android:cropToPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/divider_line3"
            android:layout_alignStart="@+id/divider_line3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Валерий Истишев"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/IstIm"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

    </RelativeLayout>
</LinearLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/linearLayout">
    <TextView
        android:id="@+id/about_frag_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Разработчки"
        android:textStyle="bold"
        android:textColor="@color/primary_header_text"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/divider_line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/accent_material_dark"
        android:layout_below="@+id/about_frag_title2"
        android:layout_alignLeft="@+id/about_frag_title2"
        android:layout_alignStart="@+id/about_frag_title2"
        android:layout_marginTop = "7dp"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AlexIm"
        android:src="@mipmap/dev_alex"
        android:layout_below="@+id/about_frag_title2"
        android:layout_alignLeft="@+id/about_frag_title2"
        android:layout_alignStart="@+id/about_frag_title2"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Александр Гузенко\nПрограммист, студент МЭИ"
        android:id="@+id/textView2"
        android:layout_above="@+id/ArtIm"
        android:layout_alignRight="@+id/about_frag_title2"
        android:layout_alignEnd="@+id/about_frag_title2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ArtIm"
        android:src="@mipmap/dev_art"
        android:layout_marginTop="30dp"
        android:cropToPadding="false"
        android:layout_below="@+id/AlexIm"
        android:layout_alignLeft="@+id/AlexIm"
        android:layout_alignStart="@+id/AlexIm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Артём Головин"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/ArtIm"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

</RelativeLayout>
    </android.support.v4.widget.NestedScrollView>