<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTheme" parent="Base.Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="android:colorPrimary">@color/primary_bgr</item>
        <item name="android:colorPrimaryDark">@color/colorNavigationBar_dark</item>
        <item name="android:statusBarColor">@color/colorStatusBar_dark</item>
        <item name="android:colorAccent">@color/colorAccent_dark</item>
        <item name="android:colorBackground">@color/colorBackground_dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_dark</item>
        <item name="android:shadowColor">@color/shadowColor_dark</item>
        <item name="android:background">@color/colorBackground_dark</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Light</item>
        <item name="android:textColorHint">@color/colorPrimaryDark_dark</item>


    </style>

    <style name="LightTheme" parent="Base.Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="android:colorPrimary">@color/colorPrimary_light</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="android:statusBarColor">@color/colorStatusBar_light</item>
        <item name="android:colorAccent">@color/colorAccent_light</item>
        <item name="android:colorBackground">@color/colorBackground_light</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_light</item>
        <item name="android:textColorSecondary">@color/textColorPrimary_light</item>
        <item name="android:shadowColor">@color/shadowColor_light</item>
        <item name="android:background">@color/Background_light</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Dark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark_light</item>
    </style>
</resources>