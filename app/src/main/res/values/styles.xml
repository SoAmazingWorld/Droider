<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTheme" parent="Base.Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>

        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>
        <item name="android:colorBackground">@color/colorBackground_dark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_dark</item>
        <item name="android:textColorTertiary">@color/cardTitleTextColor_dark</item>
        <item name="android:homeAsUpIndicator">@color/colorControlNormal_dark</item>
        <item name="android:colorPressedHighlight">@color/cardTitleTint_dark</item>

        <item name="colorIcons">@color/colorControlNormal_dark</item>
    </style>
    
    <style name="LightTheme" parent="Base.Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:textColorTertiary">@color/cardTitleTextColor_light</item>
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="android:colorBackground">@color/colorBackground_light</item>
        <item name="android:textColorPrimary">@color/textColorPrimary_light</item>
        <item name="android:textColorSecondary">@color/textColorSecondary_light</item>
        <item name="android:homeAsUpIndicator">@color/colorControlNormal_light</item>
        <item name="android:colorPressedHighlight">@color/cardTitleTint_light</item>

        <item name="colorIcons">@color/colorControlNormal_light</item>
    </style>

    <style name="DayNightAuto" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:textColorTertiary">@color/cardTitleTextColor_light</item>
    </style>

    <style name="RedThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary_red</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_red</item>
        <item name="colorAccent">@color/color_accent_red</item>
        <item name="android:textColorPrimary">@color/text_color_primary_red</item>
    </style>

    <style name="RedTheme" parent="RedThemeBase">

    </style>

    <style name="RedTheme.Toolbar" parent="RedThemeBase">
        <item name="android:textColorPrimary">@color/text_color_primary_red_toolbar</item>
        <item name="android:textColorSecondary">@color/text_color_primary_red_toolbar</item>
    </style>

    <style name="AverageHorizontalMarginBase">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="AverageHorizontalMargin" parent="AverageHorizontalMarginBase">

    </style>

    <style name="AverageHorizontalPaddingBase">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AverageHorizontalPadding" parent="AverageHorizontalPaddingBase">

    </style>

</resources>


